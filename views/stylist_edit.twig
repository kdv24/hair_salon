<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <title>Stylists</title>
    </head>
    <body>
        <h3>stylist_edit.twig</h3>
        <div class="container">
        <h2>HAIR SALON</h2>
        <h3>Individual stylist editing page</h3>
        <ul>
   
        <li> {{ stylist.getName() }}</li>
 
        </ul>
        <form action="/stylists/{{ stylist.getId }}" method="post">    
            <input name="_method" type="hidden" value="patch">

            <label for="name">Edit stylist name</label>
            <input id="name" name="name" type="text">
            <button type="submit">Update</button>            
        </form>

        <form action="/stylists/{{ stylist.getId }}" method="post">   
            <input name="_method" type="hidden" value="delete">
            <button type="submit">Delete this stylist</button>
        </form>
        </div>
    </body>
</html>